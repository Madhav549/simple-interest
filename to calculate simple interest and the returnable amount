 #include<stdio.h>
 int main(){
 int p;
   printf("Enter the principle amount: ");
    scanf("%d", &p);
 float r;
   printf("Enter the rate of interest: "); //upto a two decimal digits like 5.25%
    scanf("%f", &r);
 int t;
   printf("Enter the time period: ");  //time period in months.
    scanf("%d", &t);
 float SI = (p*r*(t/12)/100);
   printf("the calculated simple interest is %0.2f\n", SI);

 float amount;
   amount = p+SI;
   printf("the calculated returnable amount  is %0.2f\n", amount);

 return 0;
 }
